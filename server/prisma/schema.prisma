generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String    // 加密后的密码
  nickname  String?
  avatar    String?   // 头像URL
  createdAt DateTime  @default(now())
  
  // 关联
  draft     Draft?    // 每个用户只有一个草稿
  articles  Article[] // 用户发布的文章
}

// 草稿表 - 每个用户只有一个草稿
model Draft {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  content   String   @db.LongText  // 富文本内容可能很长
  userId    Int      @unique       // 一个用户只有一个草稿
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

// 文章表
model Article {
  id        Int      @id @default(autoincrement())
  title     String   @db.VarChar(255)
  content   String   @db.LongText  // 富文本内容
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  likes     Int      @default(0)   // 点赞数
  views     Int      @default(0)   // 浏览量
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags      Tag[]    // 文章标签
  
  @@index([authorId])
  @@index([createdAt])
}

// 标签表
model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique @db.VarChar(100)  // 标签
  articles  Article[] // 该标签的文章
  createdAt DateTime  @default(now())
  
  @@index([name])
}
